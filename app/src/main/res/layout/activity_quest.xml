<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestActivity">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="500dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/answer1"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:onClick="clickedAns1"
        android:text="@string/space"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:enabled="true"
        />

    <Button
        android:id="@+id/answer2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginRight="0dp"
        android:onClick="clickedAns2"
        android:text="@string/space"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:enabled="true"
        />

    <Button
        android:id="@+id/answer3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginRight="0dp"
        android:onClick="clickedAns3"
        android:text="@string/space"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:enabled="true"
        />

    <Button
        android:id="@+id/answer4"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginRight="0dp"
        android:onClick="clickedAns4"
        android:text="@string/space"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:enabled="true"
        />

    <Button
        android:id="@+id/nextQ"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="600dp"
        android:layout_marginRight="0dp"
        android:onClick="clickedNQ"
        android:text="@string/space"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:alpha="0.0"
        android:enabled="false"
        />

    <ImageView
        android:id="@+id/monza"
        android:layout_width="275dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/monza"
        android:layout_marginBottom="150dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/podium"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/podium"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/paulricard"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paulrichard"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/ukFlag"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ukflag"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/softtire"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/softtire"
        android:layout_marginBottom="175dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/giohelmet"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giohelmet"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/suzuka"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/suzuka"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/worldmap"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/worldmap"
        android:layout_marginBottom="200dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/cota"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cota"
        android:layout_marginBottom="175dp"
        android:alpha="0.0"
        />

    <ImageView
        android:id="@+id/pool"
        android:layout_width="275dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pool"
        android:layout_marginBottom="150dp"
        android:alpha="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>